[Unit]
Description=Cloudflare Tunnel for OTS Hub
After=network-online.target ots-hub.service
Wants=network-online.target
Requires=ots-hub.service

[Service]
Type=simple
User=ubuntu
# Carrega variáveis do arquivo .env
EnvironmentFile=/home/ubuntu/ots_hub/.env
# Variáveis extras ou overrides se precisar
Environment="SERVICE_NAME=ots-hub"
Environment="LOCAL_PORT=8000"
ExecStart=/home/ubuntu/ots_hub/scripts/cloudflare_tunnel.sh
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target